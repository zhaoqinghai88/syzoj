                <div class="two column row">
                    <div class="column">
                        <div style="color: #0ccf00; ">
                            <% if (fortune.good.length) { %>
                            <strong>宜：</strong><%= fortune.good[0].title %>
                            <br>
                            <span style="color: #888; font-size: 0.7em; "><%= fortune.good[0].detail %></span>
                            <div style="margin-top: 10px; "></div>
